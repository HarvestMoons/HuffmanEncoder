<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.huffman.gui.controller.MainController"
      alignment="CENTER"
      spacing="10"
      stylesheets="@buttonStyle.css, @backgroundStyle.css"
      styleClass="main-background">

    <Button fx:id="compressButton" styleClass="blueButton" text="压缩" onAction="#handleCompress" />
    <Button fx:id="decompressButton" styleClass="blueButton" text="解压缩" onAction="#handleDecompress" />
    <Button fx:id="previewButton" styleClass="blueButton" text="预览压缩包内容" onAction="#handlePreview" />
    <Button fx:id="helpButton" styleClass="blueButton" text="帮助" onAction="#handleHelp" />
</VBox>

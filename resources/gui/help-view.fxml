<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.huffman.gui.controller.HelpController"
      alignment="center"
      spacing="10"
      stylesheets="@buttonStyle.css, @backgroundStyle.css"
      styleClass="help-background">



    <Button fx:id="infoButton" text="程序开发者信息" styleClass="gradient-button" onAction="#handleDeveloperInfo"/>
    <Button fx:id="usageButton" text="使用说明" styleClass="gradient-button" onAction="#handleUsageInstructions"/>
    <Button fx:id="secretButton" text="兑换码" styleClass="gradient-button" onAction="#handleSecret"/>
    <Button fx:id="returnButton" text="返回" styleClass="gradient-button" onAction="#handleReturn"/>

</VBox>

